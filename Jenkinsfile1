                    def branch = env.BRANCH_NAME
                    if (branch ==~ /^v\d+\.\d+\.\d+$/) {
                        echo "This is a tag release: ${branch}"
                        env.IMAGE_TAG = branch
                    } else if (branch ==~ /^rc_v\d+\.\d+\.\d+$/) {
                        echo "This is a release candidate branch: ${branch}"
